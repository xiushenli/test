.type-container{
width: 100%;
height: 80rpx;

overflow: hidden;

}
.type-navbar{
white-space: nowrap;
display: flex;
height: 80rpx;
background-color: red;
}
.type-box{
  width:188rpx;
  box-sizing: content-box;
  font-size: 24rpx;
  line-height: 84rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
  background-color: goldenrod;
}
.type-navbar-item{
  border-bottom: 4rpx solid #fff;
}
.type-item-on{

  background-color: rebeccapurple;

  border-bottom: 4rpx solid #e64340;

}

.goods-content{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background-color: #f5f5f5;
  width: 100%;

}

.head-content{
  display: flex;
  flex-direction: row;

  justify-content: space-between;

 
  padding: 5px;

}
.good-content{
display: flex;
flex-flow: row nowrap;
background: white;
justify-content: space-around;
align-items: flex-start;
 border-bottom: 1px solid #e5e5e5;


}

.good{
  margin: 10rpx;
  width: 30%;
  flex: auto;
  background: #f5f5f5;
  border-radius: 5px;

}
.good image{
  display: block;
  width: 200rpx;
  height: 200rpx;
  border: 1px solid gray;
  /*border-radius: 100px;*/
  text-align: center;
  margin: 5px auto;
  
}
.good .title{

  width: 100%;
  height: 40rpx;
  line-height: 40rpx;

  text-align: center;
  font-size: 14px;
  color: grey;

  overflow: hidden;

}
.headTitle,.more-btn{
    font-size: 15px;
    color: #040403;
    font-weight: 300;
}
